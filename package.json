{
  "name": "kodex",
  "version": "1.0.0",
  "description": "Next-generation full-stack web development platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "pre-commit": "npm run type-check && npm run lint:strict && npm run format:check",
    "clean": "rm -rf .next out dist build",
    "analyze": "cross-env ANALYZE=true npm run build",
    "benchmark": "tsx scripts/run-benchmarks.ts",
    "benchmark:auth": "tsx scripts/performance/auth.performance.ts",
    "benchmark:websocket": "tsx scripts/performance/websocket.performance.ts"
  },
